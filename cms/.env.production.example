# RENDER PRODUCTION CONFIG
# Copy questo file come variabili ambiente su Render Dashboard

# Server
HOST=0.0.0.0
PORT=1337
NODE_ENV=production

# Secrets (GENERA NUOVI VALORI IN PRODUZIONE!)
APP_KEYS=REPLACE_WITH_NEW_RANDOM_KEY
API_TOKEN_SALT=REPLACE_WITH_NEW_RANDOM_SALT
ADMIN_JWT_SECRET=REPLACE_WITH_NEW_JWT_SECRET
TRANSFER_TOKEN_SALT=REPLACE_WITH_NEW_TRANSFER_SALT
ENCRYPTION_KEY=REPLACE_WITH_NEW_ENCRYPTION_KEY
JWT_SECRET=REPLACE_WITH_NEW_JWT_SECRET

# Database PostgreSQL (Render fornisce automaticamente DATABASE_URL)
DATABASE_CLIENT=postgres
DATABASE_URL=${DATABASE_URL}
DATABASE_SSL=true
DATABASE_SSL_REJECT_UNAUTHORIZED=false

# URL del tuo frontend Vercel (per CORS)
CLIENT_URL=https://your-app.vercel.app
